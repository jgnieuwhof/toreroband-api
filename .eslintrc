{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "arrow-spacing": 2,
    "comma-dangle": [ 2, "always-multiline" ],
    "dot-notation": 2,
    "eqeqeq": 2,
    "linebreak-style": [ 2, "unix" ],
    "max-len": [ "error", 100, { "ignoreUrls": true } ],
    "no-else-return": 2,
    "no-unreachable": 2,
    "no-unused-vars": 2,
    "no-useless-constructor": 2,
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-arrow-callback": 2,
    "semi": [ 2, "never" ],
    "space-in-parens": [ 2, "never" ],
    "strict": 0
  }
}
